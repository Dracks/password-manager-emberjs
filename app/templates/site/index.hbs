<button {{action "prevPage"}}> &lt; Previous</button><button {{action "nextPage"}}> Next &gt; </button>
{{#link-to "site.new" tagName="button"}}New{{/link-to}}
<table>
    <thead>
        <tr>
            <th>Group</th>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
    {{#each site in model}}
    {{#link-to 'site.edit' site.id tagName='tr'}}
        <td>{{site.group.name}}</td>
        <td>{{site.name}}</td>
        <td>{{site.description}}</td>
    {{/link-to}}
    {{/each}}
    </tbody>
</table>
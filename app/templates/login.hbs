
<div class="jumbotron">

	<form class="form-signin">
		<h2 class="form-signin-heading">{{t "login.title"}}</h2>
		{{#js-feedback-message isShowed=message.show timer=null type="error" hasCloseButton=false}}
			{{message.text}}
		{{/js-feedback-message}}

		<label for="identification">{{t "login.username"}}:</label>
		{{view Ember.TextField value=username class="form-control" placeholder='User'}}
		<label for="password">{{t "login.password"}}:</label>
		{{view Ember.TextField type='password' class="form-control" value=password placeholder='Password'}}
		<div>
			<button class="btn btn-lg btn-primary btn-block" {{action "login"}}>{{t "login.button"}}</button>
		</div>
	</form>
</div>
